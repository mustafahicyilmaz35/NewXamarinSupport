<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OutlookProject.Views.EmailSendPage">
    <ContentPage.Content>
        <StackLayout>

            <Label x:Name="lbl_mailAdress" Text="To"/>
            <Entry x:Name="entry_mailAdress"/>

            <Label x:Name="lbl_cc" Text="Cc"/>
            <Entry x:Name="entry_cc"/>


            <Label x:Name="lbl_subject" Text="Subject"/>
            <Entry x:Name="entry_subject"/>


            <Label x:Name="lbl_message" Text="Text"/>
            <Entry x:Name="entry_message"/>

            <Label x:Name="lbl_notes" Text="Notes"/>
            <Entry x:Name="entry_notes"/>

            <Button x:Name="btn_Send" Text="Send" Clicked="onSendButtonClicked"/>
            <Button x:Name="btn_notes" Text="Take Note" Clicked="OnNotesButtonClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>